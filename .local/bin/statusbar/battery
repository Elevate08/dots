#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ğŸ”Œ for plugged up, ğŸ”‹ for discharging on battery, etc.).

case $BLOCK_BUTTON in
    3) pgrep -x dunst >/dev/null && notify-send "ğŸ”‹ Battery module" "ğŸ”‹: discharging
ğŸ›‘: not charging
â™»: stagnant charge
ğŸ”Œ: charging
âš¡: charged
â—: battery very low!" ;;
esac

IFS=$'\n'
all_battery=$(acpi -b)

for battery in $all_battery
do
    battery_num=$(echo $battery | cut -d ":" -f 1)
    status=$(echo $battery | cut -d ":" -f 2 | cut -d "," -f 1 | sed -e "s/^\s*//")
    capacity=$(echo $battery | cut -d ":" -f 2 | cut -d "," -f 2 | sed -e "s/^\s*//")
    time=$(echo $battery | cut -d "," -f 3 | cut -d " " -f 1-2 )
    num_capacity=$(echo $capacity | sed "s/%//")

    status=$(echo $status | sed "s/Discharging/ğŸ”‹/;s/Not charging/ğŸ›‘/;s/Charging/ğŸ”Œ/;s/Unknown/âš¡/;s/Full/âš¡/")

    [ "$num_capacity" -le 25 ] && [ "$status" = "ğŸ”‹" ] && warn="â—"

    [ ! "$status" == "âš¡" ] && printf "%s%s%s%s%%" "$status" "$warn" "$capacity" "$time"

    [ "$status" == "âš¡" ] && printf "%s%s%s" "$status" "$warn" "$capacity "

done
